<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/toolbar_bottom_nav_coordinator_margin"
    android:gravity="center">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/takePictureButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:text="@string/take_picture_button"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_photo_camera_white_24dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:theme="@style/ButtonsOverlay"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/selectPictureButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/select_picture_button"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_photo_library_white_24dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:theme="@style/ButtonsOverlay"/>
</LinearLayout>